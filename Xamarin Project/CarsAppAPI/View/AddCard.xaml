<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CarsAppAPI.View.AddCard"
    xmlns:viewModel="clr-namespace:CarsAppAPI.ViewModels"
    BackgroundImageSource="bg5.png">
    <ContentPage.BindingContext>
        <viewModel:PaymentViewModel></viewModel:PaymentViewModel>
    </ContentPage.BindingContext>
    <Shell.TitleView>
        <StackLayout Orientation="Horizontal">
            <Image Source="logo.png"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
            <Label Text="   | Añadir método de pago"
                   TextColor="White"
                   FontSize="Medium"
                   VerticalTextAlignment="Center"/>
        </StackLayout>
    </Shell.TitleView>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20,20,20,0">
                <Frame Margin="8"
                         CornerRadius="12"
                         BackgroundColor="#22A3BF">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height=".8*"></RowDefinition>
                            <RowDefinition ></RowDefinition>
                            <RowDefinition ></RowDefinition>
                            <RowDefinition ></RowDefinition>
                            <RowDefinition ></RowDefinition>
                            <RowDefinition ></RowDefinition>
                        </Grid.RowDefinitions>
                        <Entry
                                VerticalOptions="Center"
                                HorizontalOptions="FillAndExpand"
                                Placeholder="Nombre en tarjeta"
                                PlaceholderColor="#025274"
                                TextColor="Black"
                                Text="{Binding Name}"
                                FontAttributes="Bold"
                                FontSize="Caption"
                                x:Name="name"
                                
                             />
                        <Entry
                                VerticalOptions="Center"
                                HorizontalOptions="FillAndExpand"
                                IsPassword="False"
                                Placeholder="Numero de tarjeta"
                                PlaceholderColor="#025274"
                                TextColor="Black"
                                Text="{Binding CardNumber}"
                                FontAttributes="Bold"
                                FontSize="Caption"
                                x:Name="number"
                                Grid.Row="1"
                             />
                        <Entry
                                VerticalOptions="Center"
                                HorizontalOptions="FillAndExpand"
                                IsPassword="False"
                                Placeholder="CVV"
                                PlaceholderColor="#025274"
                                TextColor="Black"
                                Text="{Binding Cvv}"
                                FontAttributes="Bold"
                                FontSize="Caption"
                                Grid.Row="2"
                                x:Name="cvv"
                             />
                        <Entry
                                VerticalOptions="Center"
                                HorizontalOptions="FillAndExpand"
                                IsPassword="False"
                                Placeholder="Mes vencimiento"
                                PlaceholderColor="#025274"
                                TextColor="Black"
                                MaxLength="2"
                                Text="{Binding ExpMonth}"
                                FontAttributes="Bold"
                                FontSize="Caption"
                                x:Name="month"
                                Grid.Row="3"
                             />
                        <Entry
                                VerticalOptions="Center"
                                HorizontalOptions="FillAndExpand"
                                IsPassword="False"
                                Placeholder="Año vencimiento"
                                PlaceholderColor="#025274"
                                TextColor="Black"
                                MaxLength="2"
                                Text="{Binding ExpYear}"
                                FontAttributes="Bold"
                                FontSize="Caption"
                                x:Name="year"
                                Grid.Row="4"
                             />
                        <Button Text="Añadir Tarjeta"
                             Command="{Binding PostAddCardCommand}"
                             Margin="50,0,50,0"
                            CornerRadius="12"
                            BackgroundColor="White"
                            FontAttributes="Bold"
                            TextColor="#025274"
                                  Grid.Row="5">
                        </Button>
                    </Grid>
                </Frame>
                <Label Text="Volver"
                           x:Name="backBTN"
                           TextColor="Black"
                           Margin="20"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Back2PaymentOptions"/>
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
