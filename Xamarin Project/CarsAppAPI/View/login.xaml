<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarsAppAPI.View.login"
             xmlns:viewModel="clr-namespace:CarsAppAPI.ViewModels">

    <ContentPage.BindingContext>
        <viewModel:MainViewModel></viewModel:MainViewModel>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Entry
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    IsPassword="False"
                    Placeholder="eMail"
                    PlaceholderColor="Gray"
                    TextColor="Black"
                    Text="{Binding Email}"
                    FontAttributes="Bold"
                    FontSize="Caption"
                 />
                <Entry
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    IsPassword="False"
                    Placeholder="Password"
                    PlaceholderColor="Gray"
                    TextColor="Black"
                    Text="{Binding Pass}"
                    FontAttributes="Bold"
                    FontSize="Caption"
                 />
                <Button Text="SELECT AUTO" Command="{Binding LoginCommand}" BackgroundColor="DarkRed" TextColor="White" FontAttributes="Bold"></Button>
                <Label  Text="{Binding ListaEmpleados.token}"  ></Label>
                <ListView ItemsSource="{Binding ListaAutos}" 
                      Header="Data" 
                      Footer="End data" 
                      RowHeight="30">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Label  Text="{Binding token}"  ></Label>
                                    </Grid>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Label BackgroundColor="Blue" HeightRequest="30"></Label>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>