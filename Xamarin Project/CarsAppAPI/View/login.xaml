<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarsAppAPI.View.Login"
             xmlns:viewModel="clr-namespace:CarsAppAPI.ViewModels">

    <ContentPage.BindingContext>
        <viewModel:MainViewModel></viewModel:MainViewModel>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
                <Image Aspect="AspectFill"
                       Source="header.jpg"
                       Opacity="0.6"/>
                <Label Text="The Car Finder"
                       TextColor="Black"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontSize="Large"
                       />
                <Entry
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    IsPassword="False"
                    Placeholder="e-mail"
                    PlaceholderColor="Gray"
                    TextColor="Black"
                    Text="{Binding Email}"
                    FontAttributes="Bold"
                    FontSize="Caption"
                 />
                <Entry
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    IsPassword="False"
                    Placeholder="Contraseña"
                    PlaceholderColor="Gray"
                    TextColor="Black"
                    Text="{Binding Password}"
                    FontAttributes="Bold"
                    FontSize="Caption"
                 />
                <Button Text="Log In" Command="{Binding LoginCommand}" BackgroundColor="DarkRed" TextColor="White" FontAttributes="Bold"></Button>
                <Label Text="¿No estás registrado?, Registrate"
                   x:Name="RegistrationBtn"
                   TextColor="Blue"
                   Margin="20"
                   HorizontalTextAlignment="Center"
                   TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>
                <!--<Button Text="LOGIN" Clicked="Button_Clicked" BackgroundColor="DarkRed" TextColor="White" FontAttributes="Bold"></Button>-->
