                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>-->
                <Label  Text="{Binding ListaRegistro.user.id}"/>
                <Label  Text="{Binding ListaRegistro.user.name}"/>
                <Label  Text="{Binding ListaRegistro.user.email}"/>
                <Label  Text="{Binding ListaRegistro.user.created_at}"/>
                <Label BackgroundColor="Blue" HeightRequest="30"/>
                <Label  Text="{Binding ListaRegistro.errors.email[0]}"/>
                <Label  Text="{Binding ListaRegistro.errors.password[0]}"/>
                <Label  Text="{Binding ListaRegistro.errors.name[0]}"/>
                <Button Text="Log in" Command="{Binding LoginCommand}"></Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>