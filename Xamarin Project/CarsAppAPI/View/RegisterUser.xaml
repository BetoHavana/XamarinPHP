<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarsAppAPI.View.RegisterUser"
             xmlns:viewModel="clr-namespace:CarsAppAPI.ViewModels">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="1,0,1,0" VerticalOptions="Center">
                <Entry
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    IsPassword="False"
                    Placeholder="Nombre"
                    PlaceholderColor="Gray"
                    TextColor="Black"
                    Text="{Binding Name}"
                    FontAttributes="Bold"
                    FontSize="Caption"
                 />
                <Entry
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    IsPassword="False"
                    Placeholder="e-mail"
                    PlaceholderColor="Gray"
                    TextColor="Black"
                    Text="{Binding Email}"
                    FontAttributes="Bold"
                    FontSize="Caption"
                 />
                <Entry
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    IsPassword="False"
                    Placeholder="Contraseña"
                    PlaceholderColor="Gray"
                    TextColor="Black"
                    Text="{Binding Password}"
                    FontAttributes="Bold"
                    FontSize="Caption"
                 />
                <Entry
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    IsPassword="False"
                    Placeholder="Confirma Contraseña"
                    PlaceholderColor="Gray"
                    TextColor="Black"
                    Text="{Binding PasswordConfirmation}"
                    FontAttributes="Bold"
                    FontSize="Caption"
                 />
                <Button Text="Registrar" Command="{Binding RegisterUserCommand}" BackgroundColor="DarkRed" TextColor="White" FontAttributes="Bold"></Button>
